<div class="mt-4">
    <div class="row">
        {{#each info}}
        <div class="col-sm-6 col-lg-4">
            <div class="card card-info-item" style="width: 18rem;">
                <img class="card-img-top" src="{{this.img}}" alt="Card image cap">
                <div class="card-body">
                    <h5 class="card-title">{{this.name}}</h5>
                    <p class="card-text">{{this.description}}</p>
                    <a href="/info/{{this.slug}}" class="btn btn-primary">Get detail infomation</a>
                </div>
            </div>
        </div>
        {{/each}}
    </div>
</div>