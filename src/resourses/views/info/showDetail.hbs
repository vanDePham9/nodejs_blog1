<div class="mt-4">
    <div class="show__img">
        <div id="carouselExampleControls" class="carousel slide" data-ride="carousel">
            <div class="carousel-inner">
                <div class="carousel-item active">
                    <img class="d-block w-100" src="{{info.img}}" alt="First slide">
                </div>
                <div class="carousel-item">
                    <img class="d-block w-100" src="{{info.img}}" alt="Second slide">
                </div>
                <div class="carousel-item">
                    <img class="d-block w-100" src="{{info.img}}" alt="Third slide">
                </div>
            </div>
            <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                <span class="sr-only">Previous</span>
            </a>
            <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                <span class="sr-only">Next</span>
            </a>
        </div>
    </div>
    <div class="show__info">
        <div id="list-example" class="list-group">
            <a class="list-group-item list-group-item-action" href="#list-item-1">Name</a>
            <h4 id="list-item-1">{{info.name}}</h4>
            <a class="list-group-item list-group-item-action" href="#list-item-2">Age</a>
            <h4 id="list-item-2">{{info.age}}</h4>
            <a class="list-group-item list-group-item-action" href="#list-item-3">Description</a>
            <h4 id="list-item-3">{{info.description}}</h4>
            
        </div>
    </div>
</div>