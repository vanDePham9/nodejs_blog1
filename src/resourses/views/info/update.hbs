<div class="mt-4">
    <h3>Update Players</h3>
    <form method="POST" action="/info/{{info._id}}?_method=PUT">
        <div class="form-group">
            <label for="name">Name</label>
            <input type="text" class="form-control" value="{{info.name}}" id="name" name="name">
        </div>
        <div class="form-group">
            <label for="age">Age</label>
            <input type="text" class="form-control" value="{{info.age}}" id="age" name="age" >
        </div>
        <div class="form-group">
            <label for="description">Description</label>
            <input type="text" class="form-control" value="{{info.description}}" id="description" name="description">
        </div>

        <button type="submit" class="btn btn-primary">Save</button>
    </form>
</div>